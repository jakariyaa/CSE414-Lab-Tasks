<!DOCTYPE html>
<html>
  <head>
    <title>Book Table</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="p-4">
    <div class="row">
      <div class="col">
        <h1>Book Table</h1>
      </div>
      <div class="col">
        <form action="/search" method="POST">
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Search by Title"
          />
        </form>
      </div>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Year</th>
        </tr>
      </thead>
      <tbody>
        <% for(let x of bookList) { %>

        <tr>
          <td><%= x.title %></td>
          <td><%= x.author %></td>
          <td><%= x.year %></td>
        </tr>

        <% } %>
      </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Go to Home Page</a>
    <a href="/add-book" class="btn btn-secondary">Add a New Book</a>
  </body>
</html>
