<!DOCTYPE html>
<html>
  <head>
    <title>Stduent Table</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="p-4">
    <div class="row">
      <div class="col">
        <h1>Student Table</h1>
      </div>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Department</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% for(let stduent of studentList) { %>

        <tr>
          <td><%= stduent.id %></td>
          <td><%= stduent.name %></td>
          <td><%= stduent.dept %></td>
          <td><%= stduent.score %></td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Go to Home Page</a>
    <a href="/add-student" class="btn btn-secondary">Add a New Student</a>
  </body>
</html>
